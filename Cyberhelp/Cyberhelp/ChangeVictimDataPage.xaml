<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cyberhelp.ChangeVictimDataPage">
    <ContentPage.Content>
        
        <StackLayout>

            <Entry x:Name="entryChangeName" TextColor="AliceBlue" Margin="10,35,10,5" Placeholder="Nickname" PlaceholderColor="#9FB6CD"/>

            <Entry x:Name="entryChangeAge" TextColor="AliceBlue" Margin="10,20,10,5" Placeholder="Idade" PlaceholderColor="#9FB6CD" Keyboard="Telephone"/>

            <Entry x:Name="entryChangeState" TextColor="AliceBlue" Margin="10,20,10,5" Placeholder="Estado" PlaceholderColor="#9FB6CD"/>

            <Entry x:Name="entryChangeEmailVR" TextColor="AliceBlue" Margin="10,20,10,5" Placeholder="E-mail" PlaceholderColor="#9FB6CD" Keyboard="Email"/>

            <Entry x:Name="entryChangePasswordVR" TextColor="AliceBlue" Margin="10,20,10,5" Placeholder="Senha" PlaceholderColor="#9FB6CD" IsPassword="True"/>

            <Button x:Name="btnChangeDataVR" Text="CADASTRAR" TextColor="AliceBlue" Margin="10,35,10,0" Style="{StaticResource StyleButtonEnter}"
                     Clicked="btnChangeDataVR_Clicked"/>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>