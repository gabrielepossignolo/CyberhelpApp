<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cyberhelp.ForgetPasswordPage"
             Title="Recuperar Senha"
             BackgroundColor="#0277bd">
    <ContentPage.Content>

        <StackLayout>

            <Entry x:Name="entryEmailFP" TextColor="AliceBlue"  Margin="10,200,10,0" Placeholder="Digite seu E-mail" PlaceholderColor="#9FB6CD" Keyboard="Email"/>

            <Button x:Name="btnForgetPassword" Text="ENVIAR" TextColor="AliceBlue" Margin="10,30,10,0" Style="{StaticResource StyleButtonEnter}"
                Clicked="btnForgetPassword_Clicked"/>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>