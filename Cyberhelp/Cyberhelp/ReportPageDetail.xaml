<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cyberhelp.ReportPageDetail"
             Title="Relatos"
             BackgroundColor="#0277bd">

    <StackLayout>
        <SearchBar x:Name="searchSearch" Placeholder="Pesquisar" PlaceholderColor="#9FB6CD"
                   TextColor="AliceBlue" TextChanged="OnSearch"></SearchBar>
        <ListView x:Name="reportListView" VerticalOptions="FillAndExpand" HorizontalOptions="CenterAndExpand" HeightRequest="500"
                  RowHeight="100" BackgroundColor="#039be5"                                      
                  SeparatorVisibility="None"
                  SeparatorColor="AliceBlue"
                  IsPullToRefreshEnabled="True"/>       


    </StackLayout>

</ContentPage>